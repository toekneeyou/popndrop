<div class="banner-poopspace">
  <div>
    <h1>Welcome <%= current_user.first_name %></h1>
    <h2>Your Poopspace is where you can manage all of your bodily needs!</h2>
  </div>
</div>

<div class="container">
    <header>
      <div class="listings">
        <h1>Here are your Listings!</h1>
      </div>
      <div class="bookings">
        <h1>Here are your Bookings!</h1>
      </div>
    </header>
    <br>
    <ol class="listings-box">
      <% @toilets.each do |toilet| %>
        <ul>
          <div class="card-trip">
            <%= link_to image_tag("https://www.thegazette.com/storyimage/GA/20181124/ARTICLE/181129809/AR/0/AR-181129809.jpg&MaxH=250&MaxW=450", alt: "alttext", class: "card-img-top"), toilet_path(toilet)  %>
            <div class="card-trip-infos">
              <div>
                <h2><%= link_to toilet.name, toilet_path(toilet) %></h2>
                <p><%= toilet.description %></p>
              </div>
              <h2 class="card-trip-pricing">$<%= toilet.rate %> / min</h2>
              <%= link_to image_tag("https://kitt.lewagon.com/placeholder/users/ssaunier", alt: "alttext", class: "card-trip-user avatar-bordered"), "#" %>
            </div>
          </div>
        </ul>
      <% end %>
    </ol>

    <div class='booking-card-container'>
      
      <br>
      <ul>
        <% @bookings.each do |booking| %>
          <li>
            <a href="<%= booking_path(booking.id) %>">
              <div class='booking-card-sm d-flex flex-column align-items-start'>
                <img src="http://luxurylaunches.com/wp-content/uploads/2016/09/18-carat-gold-toilet-Guggenheim-Museum-1170x658.jpg">
                <h2><%= booking.toilet.name %></h2>
                <div class='booking-card-sm-details'>
                  <p><%= booking.toilet.address %></p>
                  <p><%= booking.check_in %></p>
                </div>
              </div>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
</div>


<div class="">
  <%= render '/shared/toilet_form' %>
</div>
