<div class='booking-container d-flex justify-content-between'>
  <!-- contains booking-card and booking-map -->
  <div class='booking-card' style='margin: 0px 10px;'>
    <h1 class='booking-padding'>
      Get ready for relief at <%= @toilet.name %>!
    </h1>
    <% if @toilet.photo.url.nil? %>
      <div class="booking-img">
        <img src="http://luxurylaunches.com/wp-content/uploads/2016/09/18-carat-gold-toilet-Guggenheim-Museum-1170x658.jpg">
      </div>
    <% else %>
      <div class="booking-img">
        <img src="<%= @toilet.photo.url %>" >
      </div>
    <% end %>
    <div class='booking-time border-bottom d-flex justify-content-between booking-padding'>
      <div class='booking-checkin'>
        <h3>Check-In</h3>
        <p><%= @booking.check_in %></p>
      </div>
      <div class='booking-checkout'>
        <h3>Check-out</h3>
        <p><%= @booking.check_out %></p>
      </div>
    </div>

    <div class='booking-host border-bottom d-flex justify-content-between booking-padding'>
      <div class='booking-toilet'>
        <h3><%= @toilet.name %></h3>
        <p>Hosted by <%= @host.first_name %></p>
      </div>
      <div class="booking-owner-photo">
        <%= cl_image_tag @booking.user.photo, height: 40 %>
      </div>


    </div>

    <div class='booking-address border-bottom booking-padding'>
      <h3>Address</h3>
      <p><%= @toilet.address %></p>
    </div>

    <div class='booking-cost border-bottom booking-padding'>
      <h3>Total cost</h3>
      <p>$<%= @booking.price %></p>
    </div>

    <%= render 'shared/review_form', object: @booking %>

    <div class='booking-padding d-flex justify-content-center'>
      <%= link_to 'Cancel Reservation', booking_path(params[:id]), method: :delete, class:'btn btn-danger' %>
    </div>
  </div>

  <div id="map" class="map" style="width: 100vw;height: 100vh; border-radius: 5px; position:sticky; top:0; margin-top: 10px" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


